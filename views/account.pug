extends base
block content
  main.main
   section.settings__section
     .container.grid
       .my-4.p-2
         .header__section
           h2.md.text-center.my-2 Account Seetings
         .user-view__form
           .card
             form.form.form-user-data.my-1
               .form__group.p-1
                 label.form__label(for="name") Name
                 input#name.form__input(type="text" required="",      value=`${user.name}`, name="name")
               .form__group.ma-bt-md.p-1
                 label.form__label(for="email") Email address
                 input#email.form__input(type="email" required="",
                 value=`${user.email}`, name="email")
               .form__group.form__photo-upload.my-1.p-1
                 img.form__user-photo(src=`/images/users/${user.photo}` alt="user photo")
                 input#photo.form__upload(type="file" accept="image/*" name="photo")
                 label.text-primary(for="photo") Choose new Photo
               .form__group.right.my-1.p-3
                 button.btn.btn--small.btn--save-settings Save Settings
         .header__section
           h2.md.text-center.my-2 Password Change
         .user-view__form
           .card
             form.form.form-user-password.my-1
               .form__group.p-1
                 label.form__label(for="password-current") Current Password
                 input#password-current.form__input(type="password" placeholder="••••••••" required="" minlength="8")
               .form__group.p-1
                 label.form__label(for="password")  Password
                 input#password.form__input(type="password" placeholder="••••••••" required="" minlength="8")
               .form__group.p-1
                 label.form__label(for="password-confirm")  Confirm Password
                 input#password-confirm.form__input(type="password" placeholder="••••••••" required="" minlength="8")
               .form__group.right.my-1.p-3
                 button.btn.btn--small.btn--save-password Save Password
